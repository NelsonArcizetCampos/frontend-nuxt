{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "baseUrl": ".",
    "noEmit": true,
    "jsx": "preserve",
    "types": ["nuxt"],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "#app": ["./node_modules/nuxt/dist/app"]
    }
  },
  "include": ["./**/*", ".nuxt/types/**/*.ts"],
  "exclude": ["node_modules"]
}
